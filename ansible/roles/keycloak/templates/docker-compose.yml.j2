version: '3.8'
services:
  postgres:
    image: postgres:15
    environment:
      POSTGRES_DB: "keycloak"
      POSTGRES_USER: "keycloak"
      POSTGRES_PASSWORD: {{ kc_client_secret | trim | to_json }}
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "keycloak"]
      interval: 10s
      timeout: 5s
      retries: 10

  keycloak:
    image: quay.io/keycloak/keycloak:24.0
    environment:
      KC_DB: "postgres"
      KC_DB_URL: "jdbc:postgresql://postgres:5432/keycloak"
      KC_DB_USERNAME: "keycloak"
      KC_DB_PASSWORD: {{ kc_client_secret | trim | to_json }}
      KEYCLOAK_ADMIN: {{ kc_admin_user | to_json }}
      KEYCLOAK_ADMIN_PASSWORD: {{ kc_admin_pass | to_json }}
      KC_HTTP_ENABLED: "true"
      KC_HOSTNAME_STRICT_HTTPS: "false"
      KC_HOSTNAME_STRICT: "false"
      
    command: ["start-dev", "--import-realm"]
    volumes:
      - /opt/keycloak/realm-demo.json:/opt/keycloak/data/import/realm-demo.json:ro
    depends_on:
      postgres:
        condition: service_healthy
    ports:
      - "8080:8080"

  nginx:
    image: nginx:stable-alpine
    volumes:
      - /opt/keycloak/index.html:/usr/share/nginx/html/index.html:ro

  oauth2-proxy:
    image: quay.io/oauth2-proxy/oauth2-proxy:v7.6.0
    environment:
      OAUTH2_PROXY_PROVIDER: "keycloak-oidc"
      OAUTH2_PROXY_OIDC_ISSUER_URL: {{ ("http://" ~ public_ip ~ ":8080/realms/" ~ kc_realm) | to_json }}
      OAUTH2_PROXY_CLIENT_ID: {{ kc_client_id | to_json }}
      OAUTH2_PROXY_CLIENT_SECRET: {{ kc_client_secret | trim | to_json }}
      OAUTH2_PROXY_REDIRECT_URL: {{ ("http://" ~ public_ip ~ "/oauth2/callback") | to_json }}
      OAUTH2_PROXY_COOKIE_SECRET: {{ cookie_secret | trim | to_json }}
      OAUTH2_PROXY_EMAIL_DOMAINS: "*"
      OAUTH2_PROXY_UPSTREAMS: "http://nginx:80"
      OAUTH2_PROXY_HTTP_ADDRESS: "0.0.0.0:4180"
      OAUTH2_PROXY_COOKIE_SECURE: "false"
      OAUTH2_PROXY_FORCE_HTTPS: "false"      
    depends_on:
      - nginx
    ports:
      - "80:4180"
volumes:
  pgdata:
